.editor
  font-family courier

  .cursor
    position relative
    .the-cursor
      position absolute
      top 0
      left 0
      border-left 2px solid gray
      width 1px
      height 15px

  .line
    .number
      display inline-block
      min-width 24px
      text-align right
      padding-right 10px

.filename
  margin-left 45px
  .last-keypress
    font-size 12px
    font-weight normal
    padding-left 10px
